<div class="tagsCon">

    <button class="tagsBtn active" >All</button>
    <button class="tagsBtn" >JavaScript</button>
    <button class="tagsBtn" >CSS</button>
    <button class="tagsBtn" >HTML</button>

</div>
    <script>
        let list = document.querySelectorAll('.tagsBtn');
        for (let i=0; i<list.length; i++){
            list[i].onclick = function(){
            let j = 0;
            while(j < list.length){
                list[j++].className = 'tagsBtn';
            }
            list[i].className = 'tagsBtn active';
            }
        }
    </script>
<div class="grid">
